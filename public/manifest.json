{
  "manifest_version": 3,
  "name": "WP tools",
  "version": "0.0.1",
  "description": "WP/Shopify 小工具",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/logo.png"
  },
  "icons": {
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "service_worker": "./assets/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["./assets/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
